{
    "extends": ["airbnb", "prettier", "prettier/react"],
    // "extends": ["airbnb", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "impliedStrict": true,
        "classes": true,
        "jsx": true,
      },
      "sourceType": "module"
    },

    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },

    "plugins": ["html", "json", "markdown", "prettier", "react"],

    "rules": {
        "no-console": 0,
        "no-tabs": 0,
        "no-plusplus": 0,
        "no-prototype-builtins": 1,
        "no-underscore-dangle": 0,
        "no-use-before-define": 1,
        "no-param-reassign": 1,
        "no-unused-vars": [
          1,
          {
            "ignoreSiblings": true,
            "argsIgnorePattern": "res|next|^err"
          }
        ],
        "one-var": 0,
        "radix": 0,
        "react/prefer-es6-class": 2,
        "react/prop-types": 1,
        "react/destructuring-assignment": [
          1,
          "always",
          { "ignoreClassFields": true }
        ],
        "react/prefer-stateless-function": 1,
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".js", ".jsx"]
          }
        ],
        "space-before-function-paren": 0
    }
}
